[package]
name = "carp-api-serverless"
version = "0.1.0"
edition = "2021"
description = "Serverless REST API for the Carp agent registry"
license = "MIT OR Apache-2.0"
rust-version = "1.82"

[[bin]]
name = "vercel-handler"
path = "serverless/src/main.rs"

[dependencies]
# Core web framework - minimal for serverless
axum = { version = "0.7", features = ["macros"] }
tokio = { version = "1", features = ["macros", "rt-multi-thread"] }
tower = { version = "0.4", features = ["util"] }

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# Time handling
chrono = { version = "0.4", features = ["serde"] }

# HTTP types
http = "1.0"

[profile.release]
lto = true
codegen-units = 1
panic = "abort"
strip = true